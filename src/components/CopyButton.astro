---
interface Props {
  id: string;
  label: string;
  copiedLabel: string;
  variant?: 'primary' | 'ghost';
  class?: string;
}

const { id, label, copiedLabel, variant = 'ghost', class: className } = Astro.props;
---

<button
  id={id}
  type="button"
  class:list={['copy-btn', `copy-btn--${variant}`, className]}
  aria-label={label}
>
  <span class="copy-btn-icon copy-btn-icon--default">
    <slot name="icon" />
  </span>
  <span class="copy-btn-icon copy-btn-icon--check">
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="20 6 9 17 4 12"></polyline>
    </svg>
  </span>
  <span class="copy-btn-label copy-btn-label--default">{label}</span>
  <span class="copy-btn-label copy-btn-label--done">{copiedLabel}</span>
</button>

<style>
  .copy-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: all 280ms cubic-bezier(0.16, 1, 0.3, 1);
  }

  .copy-btn:active {
    transform: scale(0.97);
  }

  /* ---- Variant: ghost (blog copy-markdown style) ---- */
  .copy-btn--ghost {
    padding: 0.4rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 999px;
    background: transparent;
    color: var(--color-text-tertiary);
    font-family: var(--font-mono);
    font-size: 0.72rem;
    letter-spacing: 0.02em;
  }

  .copy-btn--ghost:hover {
    color: var(--color-text-primary);
    border-color: var(--color-border-hover);
    background: var(--color-surface);
  }

  .copy-btn--ghost.is-copied {
    border-color: var(--color-success-border);
    background: var(--color-success-bg);
  }

  /* ---- Variant: primary (hero CTA style) ---- */
  .copy-btn--primary {
    padding: 0.625rem 1.25rem;
    border: none;
    border-radius: 0.5rem;
    background: var(--color-primary);
    color: var(--color-text-on-primary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .copy-btn--primary:hover {
    background: var(--color-primary-hover);
  }

  .copy-btn--primary.is-copied {
    background: var(--color-success);
  }

  /* ---- Icon states ---- */
  .copy-btn-icon {
    display: flex;
    align-items: center;
    transition: all 300ms cubic-bezier(0.16, 1, 0.3, 1);
  }

  .copy-btn-icon--check {
    position: absolute;
    opacity: 0;
    transform: scale(0.5) rotate(-10deg);
  }

  .copy-btn--ghost .copy-btn-icon--check {
    left: 0.75rem;
    color: var(--color-success);
  }

  .copy-btn--primary .copy-btn-icon--check {
    left: 1.25rem;
  }

  .copy-btn.is-copied .copy-btn-icon--default {
    opacity: 0;
    transform: scale(0.5) rotate(10deg);
  }

  .copy-btn.is-copied .copy-btn-icon--check {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  /* ---- Label states ---- */
  .copy-btn-label {
    transition: all 300ms cubic-bezier(0.16, 1, 0.3, 1);
  }

  .copy-btn-label--done {
    position: absolute;
    opacity: 0;
    transform: translateY(4px);
  }

  .copy-btn--ghost .copy-btn-label--done {
    left: 2rem;
    color: var(--color-success);
  }

  .copy-btn--primary .copy-btn-label--done {
    left: 2.55rem;
  }

  .copy-btn.is-copied .copy-btn-label--default {
    opacity: 0;
    transform: translateY(-4px);
  }

  .copy-btn.is-copied .copy-btn-label--done {
    opacity: 1;
    transform: translateY(0);
  }
</style>
